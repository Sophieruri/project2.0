<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.name %>'s Profile</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="profile-container">
        <img src="<%= locals.user.profilePic %>" alt="<%= locals.user.name %>" class="profile-pic">
        <h1><%= locals.user.name %></h1>
        
        <section class="favorite-artists">
            <h2>Favorite Artists</h2>
            <ul>
                <%=  locals.user.favoriteArtists.forEach(function(artist) { %>
                    <li><%= artist %></li>
                <% }) %>
            </ul>
        </section>
        
        <section class="playlists">
            <h2>Playlists</h2>
            <ul>
                <%= locals.user.playlists.forEach(function(playlist) { %>
                    <li>
                        <strong><%= playlist.name %></strong> - <%= playlist.trackCount %> tracks
                    </li>
                <% }) %>
            </ul>
        </section>

        <section class="recently-played">
            <h2>Recently Played</h2>
            <ul>
                <%= locals.user.recentlyPlayed.forEach(function(track) { %>
                    <li>
                        <strong><%= track.title %></strong> by <%= track.artist %>
                    </li>
                <% }) %>
            </ul>
        </section>
    </div>
</body>
</html>
